# Environment
NODE_ENV=production

# Server
PORT=5000

# Database (use either MONGO_URI or MONGODB_URI)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/mern-auth-bp
# Alternative: MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mern-auth-bp

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_super_secret_refresh_key_minimum_32_characters_long
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend URL (adjust for your deployment)
CLIENT_URL=https://yourdomain.com
# Alternative: FRONTEND_URL=https://yourdomain.com

# Security
BCRYPT_SALT_ROUNDS=12

# Optional: Email configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# Optional: Social auth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret