{
  "name": "mern-auth-bp",
  "version": "1.0.0",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "seeders": "node server/seeders/index.js",
    "dev:client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "install:all": "npm install && npm install --prefix client",
    "install:client": "npm install --prefix client",
    "install:server": "npm install",
    "build:client": "npm run build --prefix client",
    "build": "npm run install:all && npm run build:client",
    "start:prod": "npm run build && npm start",
    "clean": "rm -rf client/dist && rm -rf node_modules && rm -rf client/node_modules"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mern",
    "authentication",
    "react",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "description": "MERN Authentication Boilerplate with JWT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
